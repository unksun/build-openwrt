# 基本配置信息
CONFIG_VERSION_NUMBER="R23.05.0"
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y  # 通用x86_64设备，支持大多数PC/虚拟机

# 内核配置
CONFIG_KERNEL_VERSION="5.15.137"
CONFIG_KERNEL_IPV6=y
CONFIG_KERNEL_NET_NS=y  # 支持网络命名空间，适配ua2f/ua3f
CONFIG_KERNEL_TCP_CONG_BBR=y  # 启用BBR拥塞控制
CONFIG_KERNEL_MODULES=y  # 支持内核模块

# 基础系统
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_openssh-server=y  # SSH服务
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_procd=y

# UA2F和UA3F相关组件（用户空间HTTP指纹伪装工具）
CONFIG_PACKAGE_ua2f=y  # 基础版HTTP User-Agent伪装
CONFIG_PACKAGE_ua2f-ssl=y  # 支持HTTPS伪装
CONFIG_PACKAGE_ua3f=y  # 增强版指纹伪装（支持更多协议字段）
CONFIG_PACKAGE_ua3f-utils=y  # ua3f辅助工具（规则管理、日志分析）
CONFIG_PACKAGE_libustream-openssl=y  # 依赖：SSL库支持

# 网络核心组件
CONFIG_PACKAGE_dnsmasq-full=y  # 完整DNS/DHCP功能
CONFIG_PACKAGE_firewall4=y  # nftables防火墙
CONFIG_PACKAGE_iptables-nft=y  # 兼容iptables语法
CONFIG_PACKAGE_ip6tables-nft=y  # IPv6防火墙
CONFIG_PACKAGE_wget-ssl=y  # 带SSL的wget
CONFIG_PACKAGE_curl=y  # HTTP客户端
CONFIG_PACKAGE_tcpdump=y  # 网络抓包工具（调试用）

# Web管理界面（LuCI）
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y  # 中文支持
CONFIG_PACKAGE_luci-app-firewall=y  # 防火墙Web配置
CONFIG_PACKAGE_luci-app-ua2f=y  # UA2F的LuCI控制界面
CONFIG_PACKAGE_luci-app-ua3f=y  # UA3F的LuCI控制界面

# 存储支持（x86平台常用）
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y  # NTFS文件系统支持
CONFIG_PACKAGE_block-mount=y  # 分区挂载工具
CONFIG_PACKAGE_e2fsprogs=y  # ext4文件系统工具

# 其他实用工具
CONFIG_PACKAGE_htop=y  # 系统监控
CONFIG_PACKAGE_nano=y  # 文本编辑器
CONFIG_PACKAGE_speedtest-cli=y  # 网速测试
CONFIG_PACKAGE_ddns-scripts=y  # 动态DNS支持

# 编译优化
CONFIG_TARGET_OPTIMIZATION="-Os -pipe -march=x86-64 -mtune=generic"
CONFIG_CCACHE=y  # 启用编译缓存（加速二次编译）
CONFIG_BUILD_LOG=y  # 生成编译日志

# 禁用不必要组件（减小镜像体积）
# CONFIG_PACKAGE_ppp is not set  # 如无需拨号可禁用
# CONFIG_PACKAGE_wpad-basic is not set  # 如无需无线可禁用
